{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "groupName": "angular-monorepo",
      "matchPackagePrefixes": [
        "@angular/",
        "typescript",
        "zone.js"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    }
  ]
}
