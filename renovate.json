{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "groupName": "angular-monorepo",
      "matchPackagePrefixes": [
        "@angular/",
        "zone",
        "typescript"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
