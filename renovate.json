{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "extends": "monorepo:angular",
      "groupName": "angular-monorepo",
      "matchPackagePrefixes": [
        "@angular/"
      ],
      "matchPackagePatterns": [
        "typescript"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    }
  ]
}
