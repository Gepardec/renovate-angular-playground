{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "separateMajorMinor": false,
  "separateMultipleMajor": false,
  "packageRules": [
    {
      "extends": [
        "monorepo:angular"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "Angular Dependencies",
      "groupSlug": "angular_{{currentVersion}}_{{newVersion}}"
    }
  ]
}
