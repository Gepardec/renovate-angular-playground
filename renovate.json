{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "angular"
      ],
      "groupName": "Angular Dependencies",
      "groupSlug": "angular_{{currentVersion}}_{{newVersion}}"
    }
  ]
}
