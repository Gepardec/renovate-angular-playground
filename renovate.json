{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "angular monorepo",
      "groupSlug": "major-angular-monorepo",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "angular",
        "@ngrx"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "zonejs",
      "groupSlug": "major-angular-monorepo",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "zone.js"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "typescript",
      "groupSlug": "major-angular-monorepo",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "typescript"
      ]
    }
  ]
}
